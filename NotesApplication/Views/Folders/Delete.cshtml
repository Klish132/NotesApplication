@model NotesApplication.Models.Folder

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    @if (!@Model.IsRoot)
    {
        <img src="~/images/@Model.ImageFileName" width="50" height="50" />

    }
    <h1>Delete @Model.Title</h1>
</head>

<body>
<div>
    <span>Actions:</span>
    <a asp-action="Details" asp-route-Id="@Model.Id">Back</a>
</div>

<h3>Are you sure you want to delete this folder?</h3>
<div>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
</body>

