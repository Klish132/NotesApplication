@model NotesApplication.Models.Note

@{
    ViewBag.Title = Model.Title + "Details";
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <h1>Note "@Model.Title"</h1>
</head>


<body>
<div>
    <span>Actions:</span>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a> |
    <a asp-controller="Folders" asp-action="Details" asp-route-id="@Model.ParentFolderId">Back</a>
</div>
<div>

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class = "col-sm-10">
            <textarea asp-for="Text" rows="10" cols="40" readonly></textarea>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Priority)
        </dt>
        @{
            var prio = "";
            switch (Model.Priority)
            {
                default:
                case Note.NotePriority.Normal:
                    prio = "Normal";
                    break;
                case Note.NotePriority.High:
                    prio = "High";
                    break;
                case Note.NotePriority.Critical:
                    prio = "Critical";
                    break;
            }
            <dd class="col-sm-10">
                @prio
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsFavourite)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsFavourite)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EditDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EditDate)
        </dd>
        
    </dl>
</div>
</body>
</html>
