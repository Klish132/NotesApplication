@model NotesApplication.Models.Note

@{
    ViewBag.Title = "Delete folder";
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <h1>Delete</h1>
</head>
<body>
<div>
    <span>Actions:</span>
    <a asp-action="Details" asp-route-Id="@Model.Id">Back</a>
</div>
<h3>Are you sure you want to delete this?</h3>
<div>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Priority)
        </dt>
        @{
            var prio = "";
            switch (Model.Priority)
            {
                default:
                case Note.NotePriority.Normal:
                    prio = "Normal";
                    break;
                case Note.NotePriority.High:
                    prio = "High";
                    break;
                case Note.NotePriority.Critical:
                    prio = "Critical";
                    break;
            }
            <dd class="col-sm-10">
                @prio
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsFavourite)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsFavourite)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EditDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EditDate)
        </dd>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
        
</div>
</body>
</html>
